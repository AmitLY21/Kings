<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001220"
    tools:context=".activities.ModesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:background="@android:color/transparent"
                app:icon="@drawable/ic_back"
                app:iconGravity="textTop"
                app:iconPadding="0dp"
                app:iconTint="@color/white" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/play_bold"
                android:text="MODES"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </RelativeLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/play_reg"
            android:text="@string/standard_plan"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartRegKings"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="24dp"
            android:layout_weight="3"
            android:background="@drawable/ic_button_background"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textSize="24sp"
            app:backgroundTint="@null"
            app:cornerRadius="50dp"
            app:icon="@drawable/ic_crown"
            app:iconGravity="end"
            app:iconSize="48dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lblPremium"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/play_reg"
            android:text="@string/premium_plan"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartPremiumKings"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="24dp"
            android:layout_weight="3"
            android:background="@drawable/ic_button1_background"
            android:gravity="center_vertical"
            android:text="Kings with Do or Drink"
            android:textSize="18sp"
            app:backgroundTint="@null"
            app:cornerRadius="50dp"
            app:icon="@drawable/ic_thumbs"
            app:iconGravity="end"
            app:iconSize="48dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddCustomsMissions"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="24dp"
            android:layout_weight="3"
            android:background="@drawable/ic_button2_background"
            android:gravity="center_vertical"
            android:text="@string/add_customs_missions"
            android:textSize="18sp"
            app:backgroundTint="@null"
            app:cornerRadius="50dp" />


    </LinearLayout>


</RelativeLayout>